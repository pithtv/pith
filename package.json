{
  "name": "pithmediaserver",
  "version": "0.2.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/typescript/**/**",
      "**/typescript/**",
      "**/typescript"
    ]
  },
  "files": [
    "bin",
    "README.md",
    "LICENSE",
    "AUTHORS"
  ],
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "prepublishOnly": "yarn install && yarn build",
    "start": "yarn workspace @pithmediaserver/pith start",
    "test": "yarn workspaces foreach test",
    "pack": "yarn workspaces foreach pack"
  }
}
