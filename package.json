{
  "name": "@pithmediaserver/pith",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc && npm --prefix webui install && npm --prefix webui run build-prod",
    "prepublishOnly": "npm install && npm run build",
    "start": "node $NODE_DEBUG_OPTION built/app",
    "test": "jest __tests__/*.ts",
    "testweb": "npm --prefix webui test"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "./built/app.js",
  "bin": {
    "pith": "./bin/pith.js"
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/mdns": "0.0.34",
    "@types/mongodb": "^3.3.16",
    "@types/node-fetch": "^2.5.6",
    "@types/sharp": "^0.24.0",
    "@types/ws": "^7.2.4",
    "MD5": "^1.3.0",
    "async": "^3.1.0",
    "body-parser": "^1.9.0",
    "entities": "^1.1.2",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.0.0-rc3",
    "http-string-parser": "0.0.6",
    "log4js": "^6.1.0",
    "mdns": "^2.7.2",
    "mongodb": "^3.5.3",
    "moviedb-promise": "^3.1.8",
    "nestdb": "^2.0.0",
    "node-fetch": "^1.6.3",
    "node-uuid": "^1.4.8",
    "reflect-metadata": "^0.1.13",
    "retrieve-keyframes": "^2.13.1",
    "sharp": "^0.24.0",
    "source-map-support": "^0.5.16",
    "sprintf-js": "^1.0.2",
    "tsyringe": "^4.0.1",
    "upnp-client-minimal": "^0.0.4",
    "ws": "^6.1.2",
    "xml2js": "^0.4.19"
  },
  "files": [
    "webui/dist/**",
    "built",
    "resources",
    "icons",
    "README.md",
    "LICENSE",
    "AUTHORS"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "jest": "^25.5.4",
    "mock-fs": "^4.10.4",
    "ts-jest": "^25.5.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
