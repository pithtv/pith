{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "built",
    "rootDir": "src",
    "allowJs": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": ["./node_modules/@types"],
//    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ]
}
